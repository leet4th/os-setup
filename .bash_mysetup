
export SETUPDIR="/home/lee/os-setup"
alias mysetup='g $SETUPDIR/*sh'

# Copys tracked setup files from local to SETUPDIR
savesetup () {
    printf "copying to $SETUPDIR..."

    # Copy files
    cp -rf ~/.bashrc $SETUPDIR/; 
    cp -rf ~/.bash_aliases $SETUPDIR/; 
    cp -rf ~/.bash_mysetup $SETUPDIR/; 
    cp -rf ~/.bash_carla $SETUPDIR/; 
    cp -rf ~/.vim $SETUPDIR/; 
    cp -rf ~/.vimrc $SETUPDIR/; 

    # Copy and scrub personal info
    cp -rf ~/.gitconfig $SETUPDIR/tmp1; 
    sed 's/email.*/email = ********/' $SETUPDIR/tmp1 > $SETUPDIR/tmp2
    sed 's/name.*/name = ********/' $SETUPDIR/tmp2 > $SETUPDIR/.gitconfig
    rm $SETUPDIR/tmp*

    printf "Done\n"
}

